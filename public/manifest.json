{
  "manifest_version": 3,
  "name": "Bilibili Lottery Local",
  "description": "纯本地运行的B站抽奖工具插件",
  "version": "0.1.0",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "B站抽奖助手"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*.bilibili.com/*",
    "https://passport.bilibili.com/*"
  ]
}
